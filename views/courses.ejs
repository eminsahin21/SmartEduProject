<%- include("partials/_header") %>
<%- include("partials/_navigation") %>

<div class="all-title-box">
	<div class="container text-center">
		<h1>Courses<span class="m_1">Lorem Ipsum dolroin gravida nibh vel velit.</span></h1>
	</div>
</div>

<div id="overviews" class="section wb">
	<div class="container">
		<div class="row">
			<div class="col-lg-9 blog-post-single">
				<div class="row">
					<% courses.forEach(item => { %>
					<div class="col-lg-6 col-md-6">
						<div class="course-item mb-5">
							<div class="image-blog">
								<img src="/images/blog_1.jpg" alt="" class="img-fluid">
							</div>
							<div class="course-br">
								<div class="course-title">
									<h2><a href="/courses/<%= item.slug %>" title=""><%= item.name %></a></h2>
								</div>
								<div class="course-desc">
									<p><%= item.description.substring(0,100) + "..." %></p>
								</div>
							</div>
							<div class="course-meta-bot">
								<ul>
									<li><i class="fa fa-user" aria-hidden="true"></i>Teacher Name</li>
								</ul>
							</div>
						</div>
					</div><!-- end col -->
					<% }) %>
				</div><!-- end row -->

			</div><!-- end col -->
			<div class="col-lg-3 col-12 right-single">
				<div class="widget-search">
					<div class="site-search-area">
						<form method="get" id="site-searchform" action="#">
							<div>
								<input class="input-text form-control" name="search-k" id="search-k"
									placeholder="Search keywords..." type="text">
								<input id="searchsubmit" value="Search" type="submit">
							</div>
						</form>
					</div>
				</div>
				<div class="widget-categories">
					<h3 class="widget-title">Kategoriler</h3>
					<ul>
						<% categories.forEach(item => { %>
						<li><a href="/courses?categories=<%= item.slug %>"><%= item.name %></a></li>
						<% }) %>
					</ul>
				</div>
			</div>
		</div><!-- end row -->
	</div><!-- end container -->
</div><!-- end section -->

<%- include("partials/_footer") %>